<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="kanban_view_teacher">
            <field nmae="name">教师看板</field>
            <field name="model">lxb.teacher</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field nmae="id"/>
                    <field name="image_128"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_image">
                                    <t t-if="record.image.value">
                                        <img t-att-src="kanban_image('lxb.teacher', 'image', record.id.value"/>
                                    </t>
                                    <t t-if="!record.image.value">
                                        <img t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                    </t>
                                </div>
                                <div class="o_kanban_content">
                                    <h4>
                                        <a type="open"/>
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li t-if="record.contact_address.raw_value">
                                            <field name="contact_address"/>
                                        </li>
                                        <li t-if="record.mobile.raw_value">
                                            <field name="mobile"/>
                                        </li>
                                        <li t-if="record.email.raw_value">
                                            <a t-attf-href="mailto:#{record.email.value}">
                                                <field name="email"/>
                                            </a>
                                        </li>
                                        <li t-if="record.company_id.raw_value">
                                            <field name="company_id"/>
                                        </li>
                                        <li t-if="record.lang.raw_value">
                                            <field name="lang"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </field>
        </record>
        
        <record model="ir.ui.view" id="tearch_view_tree">
            <field name="name">tearch_view_tree</field>
            <field name="model">lxb.tearch</field>
            <field name="arch" type="xml">
                <tree string="Tearch">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="birth_date"/>
                    <field name="gender"/>
                    <field name="nationality"/>
                    <field name="emergency_contact"/>
                    <field name="emp_id"/>
                    <field name="company_id"/>
                    <field name="teacher_subject_ids"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tearch_view_form">
            <field name="name">tearch_view_form</field>
            <field name="model">lxb.teachere</field>
            <field name="arch" type="xml">
                <form string="Tearch">
                    <sheet>
                        <div class="left">
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="birth_date"/>
                                <field name="gender"/>
                                <field name="nationality"/>
                            </group>
                        </div>
                        <div class="right">
                            <group>
                                <field name="emergency_contact"/>
                                <field name="emp_id"/>
                                <field name="company_id"/>
                                <field name="teacher_subject_ids"/>
                                <field name="login"/>
                                <field name="last_login"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.action.act_window" id="teacher_view_action">
            <field name="name">teacher</field>
            <field name="res_model">lxb.teacher</field>
            <field name="view_model">kanban,tree,form</field>
        </record>
    </data>
</odoo>